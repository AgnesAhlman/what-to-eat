generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  userId   String   @db.ObjectId
  name     String   @unique
  password String
  recipes  Recipe[]
}

model Recipe {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  ingridients String
  description String
  img         String?
  User        User?   @relation(fields: [userId], references: [id])
  userId      String? @db.ObjectId
}
